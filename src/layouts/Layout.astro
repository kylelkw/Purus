---
interface Props {
	title: string;
}

const { title } = Astro.props;
import NavBar from '../components/NavBar.astro';
import '../styles/global.css';
---

<!doctype html>
<html lang="en" data-nav="false" data-mobile="false">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter&family=Montserrat:ital@0;1&family=Nunito:ital@0;1&family=Quicksand:wght@300..700&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<meta name="viewport" content="width=device-width, minimum-scale=1, initial-scale=1, shrink-to-fit=no">
		<title>{title}</title>
	</head>
	<header>
		
	</header>
	<NavBar />
		<div data-nav="false" class="menu sticky flex justify-end top-0 right-0">
			<div class="menu-items absolute flex flex-col justify-center items-end cursor-pointer h-screen text-center duration-500 w-screen text-6xl">
				<div class="menu-item min-w-0.5"><a href="/">Home</a></div>
				<div class="menu-item min-w-0.5"><a href="/about">About</a></div>
				<div class="menu-item min-w-0.5"><a href="/contact">Contact</a></div>
			</div>
			<!-- <div class="z-10 menu-bg absolute top-0 w-screen" /> -->
		</div>
	<body>

		<main>
			<slot />
		</main>
	</body>
</html>
<script>
	var viewPortWidth = window.innerWidth;
	const main = document.querySelector('html');
	main.addEventListener('resize',() => {
		if(viewPortWidth <= 800){
			main.dataset.mobile = main.dataset.mobile === 'true' ? 'false' : 'true';
		}
	});


</script>
<style>
	html {
		/* font-family: "Quicksand", sans-serif; */
		/* font-family: "Nunito", sans-serif; */
		font-family: "Montserrat", sans-serif;
		font-size:80%;
		font-weight: 500;
		font-style: normal;
		scroll-behavior: smooth;
		text-decoration:none!important;
	}
	
	html[data-nav="false"]{
		overflow-x:hidden;
	}
	html[data-nav="true"] > body > main {
		transform: translateX(-100%);
		filter: brightness(50%);
	}
	
	html[data-nav="true"] > body {
		overflow: hidden;
	}
	body {
		background-color: hsl(var(--color-content1)/1);
	}
	main{
		overflow: hidden;
	}
	a{
    	text-decoration:none!important;
	}
	.menu-item{
		color: hsl(var(--color-content0)/1);
		padding-top: 3rem;
		padding-bottom: 3rem;
		/* border-top-width: 2px;
		border-bottom-width: 2px; */
		width: 20vw;
		transition:500ms cubic-bezier(.13,.53,.38,.97);
	}
	.menu-items{
		transition:500ms cubic-bezier(.13,.53,.38,.97);
	}
	.menu[data-nav="false"] > .menu-items{
		transform: translateX(50%) scale(75%);
		
	}
	.menu-items:hover > .menu-item{
		opacity:0.3;
	}
	.menu-items:hover > .menu-item:hover{
		opacity:1;
		transform: scale(105%);
	}
	.menu-bg {
		opacity: 0.9;
		background-size:cover;
		height:100vh;
		left: 70%;
		background: linear-gradient(164deg, rgba(242,0,137,1) 0%, rgba(188,0,221,1) 33%, rgba(45,0,247,1) 66%, rgba(255,182,0,1) 100%), rgba(0,0,0,0.3);
		transition: opacity 1s ease, background-size 1s ease;
	}
	.menu-items:hover ~ .menu-bg {
		opacity: 0.7;
		
	}
	.menu[data-nav="false"] > .menu-bg {
		transform: translateX(50%);
		transition:1500ms cubic-bezier(.13,.53,.38,.97);
	}
	main {
		transition:500ms cubic-bezier(.13,.53,.38,.97);
	}
	@media (max-width: 786px){
	.menu[data-nav="true"] > .menu-items{
		transform: translateX(-50%) scale(75%);
		
	}
	}
	@media (min-width: 768px){
	html{
		font-size:100%;
	}
	html[data-nav="true"] > body > main {
		transform: translateX(-20%);
		filter: brightness(50%);
	}
	.menu[data-nav="false"] > .menu-items{
		transform: translateX(20%) scale(75%);
		
	}
	}
	@media not all and (min-resolution:.001dpcm) { @media {

.safari_only { 
	font-size:62.5%;

}
}}
</style>

