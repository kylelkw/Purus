<style>
.sideways {
    text-orientation: sideways-right;
    writing-mode: vertical-rl; 
}
.open {
    opacity:0;
}
.toggle-menu[data-nav="false"]:hover >.open{
    opacity:1;
}
.toggle-menu[data-nav="true"]>.close{
    opacity:1;
}
.toggle-menu[data-nav="true"]{
    background-color: white;
}
@media (min-width: 768px){
.toggle-menu[data-nav="true"]{
    background-color: white;
    transform: translateX(-450%) scale(150%); 
    transition:500ms cubic-bezier(.13,.53,.38,.97)
}
.toggle-menu[data-nav="true"]:hover{
    transform: translateX(-450%) scale(175%);
}
.toggle-menu[data-nav="true"]:active{
    transform: translateX(-450%) scale(125%);
}
}
.toggle-menu[data-nav="false"]{
    transition:500ms cubic-bezier(.13,.53,.38,.97)
}
.nav-text[data-nav="true"]{
    color:white;
    /* transform: translateX(-875%) scale(150%); 
    transition:400ms cubic-bezier(.13,.53,.38,.97) */
}
.nav-text[data-nav="false"]{
    transition:400ms cubic-bezier(.13,.53,.38,.97)
}


</style>
<script>
    const navBar = document.querySelector(".nav-text");
    const menuToggle = document.querySelector(".toggle-menu");
    const menuItems = document.querySelector(".menu");
    menuToggle.addEventListener("click", () => {
        menuToggle.dataset.nav = menuToggle.dataset.nav === "true" ? "false" : "true";
        navBar.dataset.nav = navBar.dataset.nav === "true" ? "false" : "true";
        menuItems.dataset.nav = menuItems.dataset.nav === "true" ? "false" : "true";
        document.querySelector("html").dataset.nav = document.querySelector("html").dataset.nav === "true" ? "false" : "true";
    });
</script>